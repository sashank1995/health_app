<% if current_user && current_user.admin? %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@disease) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.submit "Create disease", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% else %>
  <%= render 'form' %>
<% end %>
