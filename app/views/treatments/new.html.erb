<% if current_user && current_user.admin? %>
  <%= link_to "Enter a new disease", new_disease_path %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@treatment) do |f| %>
        <%= f.label :medicine %>
        <%= f.text_field :medicine %>

        <%= f.label :food %>
        <%= f.text_field :food %>

        <%= f.label :activities %>
        <%= f.text_field :activities %>

        <%= f.label :disease_id %>
        <%= f.text_field :disease_id %>

        <%= f.submit "Create Treatment", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% else %>
  <% if user_signed_in? %>

    <h3>Select the disease you are suffering from</h3>

    <%= render 'form' %>

    <%= link_to 'I do not know the name of my disease', new_disease_path %>

  <% else %>
    <%= link_to 'Sign up', new_user_registration_path %>
  <% end %>

<% end %>
