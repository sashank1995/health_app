<% if current_user && current_user.admin? %>
  <%= link_to "Enter a new disease", new_disease_path %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@treatment) do |f| %>
        <%= f.label :medicine %>
        <%= f.text_field :medicine %>

        <%= f.label :food %>
        <%= f.text_field :food %>

        <%= f.label :activities %>
        <%= f.text_field :activities %>

        <%= f.submit "Save Changes", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
